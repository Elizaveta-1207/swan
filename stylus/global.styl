@media (max-width: 1440px)
	html
		font-size 16px

@media (max-width: 1180px)
	.g-wrapper
		padding 0 20px
		width 100%

@media(max-width:991px)
	.barba-container
		margin-top 4.6875rem

@media(max-width: 414px)
	input[type='text'],
	input[type='password'],
	input[type='email'],
	textarea
		font-size 16px
