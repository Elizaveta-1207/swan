*
	margin 0
	padding 0
	box-sizing border-box
	outline none
	text-decoration none
	box-shadow none

a
	text-decoration none
	color $black

progress
	position fixed
	top 0
	left 0
	z-index 10000
	width 100%
	border none
	background $white
	height 0.3125rem

::-webkit-progress-bar
	background $white

::-webkit-progress-value
	background $blue

img
	display block

h1,h2,h3,h4,h5,h6
	font-weight 400

textarea::-webkit-input-placeholder,
input::-webkit-input-placeholder
	font-family $Regular
	font-weight 100
	color #929292

textarea::-moz-placeholder,
input::-moz-placeholder
	font-family $Regular
	font-weight 100
	color #929292

textarea:-moz-placeholder,
input:-moz-placeholder
	font-family $Regular
	font-weight 100
	color #929292

textarea:-ms-input-placeholder,
input:-ms-input-placeholder
	font-family $Regular
	font-weight 100
	color #929292

.g-wrapper
	max-width 1140px
	margin 0 auto

.blur
	filter blur(10px)

section,
main
	position relative
	display block

// .barba-container
